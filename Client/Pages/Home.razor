@code {
    private string emailInput = "";
    private UserResponse? userResponse;
    private bool isLoading = false;
    private string? errorMessage;

    private async Task LoadUser()
    {
        if (string.IsNullOrWhiteSpace(emailInput) ||
            !System.Text.RegularExpressions.Regex.IsMatch(emailInput, @"^[^@\s]+@[^@\s]+\.[^@\s]+$"))
            return;

        isLoading = true;
        errorMessage = null;
        userResponse = null;

        try
        {
            userResponse = await UserApi.GetUserByEmailAsync(emailInput);
            emailInput = userResponse.Name;
        }
        catch (Exception ex)
        {
            errorMessage = ex.Message;
        }
        finally
        {
            isLoading = false;
        }
    }
}
